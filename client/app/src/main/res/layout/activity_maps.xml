<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="match_parent">

    <androidx.cardview.widget.CardView android:layout_width="150dp"
                                       android:layout_height="100dp"
                                       android:layout_alignParentRight="true"
                                       android:layout_margin="20dp"
                                       app:cardCornerRadius="16dp">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Legend"
                      android:textStyle="bold"
                      android:textColor="@color/blackk"
                      android:layout_margin="8dp"
                      android:id="@+id/legend_text"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       app:srcCompat="@drawable/ic_fiber_manual_record_black_24dp"
                       android:tint="@color/red"
                       android:layout_below="@+id/legend_text"
                       android:layout_marginLeft="10dp"
                       android:id="@+id/red_dot"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Garbage"
                      android:textColor="@color/blackk"
                      android:layout_toRightOf="@+id/red_dot"
                      android:layout_below="@+id/legend_text"
                      android:layout_marginLeft="10dp"
            android:layout_alignBaseline="@+id/red_dot"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       app:srcCompat="@drawable/ic_fiber_manual_record_black_24dp"
                       android:tint="@color/green"
                       android:layout_below="@+id/red_dot"
                       android:layout_marginLeft="10dp"
                       android:id="@+id/green_dot"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Trees"
                      android:textColor="@color/blackk"
                      android:layout_toRightOf="@+id/red_dot"
                      android:layout_below="@+id/red_dot"
                      android:layout_marginLeft="10dp"
                      />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <fragment
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            tools:context=".MapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_above="@id/buttons_container"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_alignParentBottom="true"
            android:id="@+id/buttons_container">

        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:paddingTop="16dp"
                     android:paddingBottom="16dp"
                     android:layout_weight="1"
                     android:background="@color/white"
                     android:id="@+id/activityListBtn"
                     android:src="@drawable/ic_format_list_bulleted_black_24dp"/>

    </LinearLayout>

</RelativeLayout>
