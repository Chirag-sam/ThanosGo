<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ReportActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/report_text"
              android:text="Report an event:"
              android:textSize="20dp"
              android:textStyle="bold"
              android:textColor="@color/blackk"
              android:layout_margin="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event type"
            android:layout_below="@+id/report_text"
            android:id="@+id/event_type_input"
    android:layout_margin="10dp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/event_type_input"
              android:textSize="18dp"
              android:text="Difficulty:"
              android:layout_margin="8dp"
              android:id="@+id/difficulty_text"/>

    <RadioGroup android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_type_input"
                android:layout_toRightOf="@+id/difficulty_text"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:id="@+id/radio_group">
        <RadioButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Easy"
                     android:id="@+id/easy_radio"/>
        <RadioButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Medium"
                     android:id="@+id/medium_radio"/>
        <RadioButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Hard"
                     android:id="@+id/hard_radio"/>
    </RadioGroup>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="18dp"
              android:text="Location: Current"
              android:layout_below="@+id/radio_group"
              android:layout_margin="8dp"
              android:id="@+id/location_text"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:id="@+id/submit_button"
            android:text="SUBMIT FOR EVALUATION"
            android:padding="10dp"
            android:layout_below="@+id/location_text"
            android:layout_margin="20dp"/>

</RelativeLayout>