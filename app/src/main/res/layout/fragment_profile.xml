<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="match_parent"
                tools:context=".fragments.ProfileFragment">

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/person_info">
        <ImageView android:layout_width="80dp"
                   android:layout_height="80dp"
                   app:srcCompat="@drawable/ic_person_black_24dp"
                   android:id="@+id/picture"

        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Man The Dan"
                  android:textSize="20dp"
                  android:textColor="#000"
                  android:layout_toRightOf="@+id/picture"
                  android:id="@+id/name"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Chennai, Tamil Nadu"
                  android:textSize="16dp"
                  android:textColor="#000"
                  android:layout_toRightOf="@+id/picture"
                  android:layout_below="@+id/name"
        />

    </RelativeLayout>

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/person_info"
                    android:paddingLeft="20dp"
                    android:id="@+id/act_com_container"
    android:layout_marginTop="30dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="20"
                  android:textSize="28dp"
                  android:textStyle="bold"
                  android:textColor="@color/colorPrimary"
                  android:id="@+id/activities_completed"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="ACTIVITIES COMPLETED"
                  android:layout_below="@+id/activities_completed"
                  android:id="@+id/act_comp"/>

    </RelativeLayout>

    <LinearLayout android:layout_width="2dp"
                  android:layout_height="60dp"
                  android:background="#d3d3d3"
                  android:layout_toRightOf="@+id/act_com_container"
                  android:layout_below="@+id/person_info"
                  android:layout_marginLeft="16dp"
                  android:id="@+id/line"
                  android:orientation="vertical"
    android:layout_marginTop="30dp"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/person_info"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/line"
                    android:id="@+id/points_container"
    android:layout_marginTop="30dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="600"
                  android:textSize="28dp"
                  android:textStyle="bold"
                  android:textColor="@color/colorPrimary"
                  android:id="@+id/points"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="POINTS"
                  android:layout_below="@+id/points"
                  android:id="@+id/points_text"/>

    </RelativeLayout>

    <com.github.mikephil.charting.charts.PieChart android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/points_container"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>


</RelativeLayout>